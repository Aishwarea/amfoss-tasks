N = int(input())
for i in range(1,N+1):
    f = (N-i)//2
    if i%2 !=0:
        sen = "*"*f + "D"*i +"*"*f
        sen = sen.rstrip()
        print(sen)
i = N-1
while i >= 0:
    f = (N-i)//2
    if i%2 !=0:
        sen = "*"*f + "D"*i +"*"*f
        sen = sen.rstrip()
        print(sen)
    i -= 1
